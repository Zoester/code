<!--pages/story/story.wxml-->
<view class="card-product">
  <view class="card-product-infos">
    <view class="h2">{{story.content}}</view>
    <view class="p">{{story.name}}</view>
  </view>
</view>

<view wx:for="{{comments}}" wx:for-item="comment" class="card-product">
  <view class="card-product-infos">
    <view class="h2">{{comment.content}}</view>
    <view class="p">{{comment.name}}</view>
  </view>

  <view> {{comment.content}}
    <view class="btn btn-flat" data-id="{{comment.id}}" bindtap="deleteComment" > Delete Comment</view>
  </view>

  <view> {{comment.content}}
    <view class="btn btn-flat" data-id="{{comment.id}}" data-votes="{{comment.votes}}" bindtap="voteComment" > votes: {{comment.votes}} </view>
  </view>

</view>







